            android:name="com.google.android.geo.API_KEY"
            android:value="AIzaSyD_35f_8Z9-p7DdKOyGQOlKLHF99Rznrqs" />

        <activity android:name=".controller.activity.SearchPersonActivity"></activity>
    </application>

</manifest>